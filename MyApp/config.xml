    <preference name="scheme" value="http" />
    <preference name="hostname" value="2puissance2.connect4.academy" />
    <plugin name="cordova-plugin-media" spec="6.1.0" />
    <plugin name="cordova-plugin-device" spec="2.1.0" />
    <plugin name="cordova-plugin-battery-status" spec="2.0.3" />
    <plugin name="cordova-plugin-screen-orientation" spec="3.0.3" />
    <plugin name="cordova-plugin-vibration" spec="3.1.1" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.5" />
